# Environment variables

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ai_search_intelligence
REDIS_URL=redis://localhost:6379

# API Keys
OPENAI_API_KEY=
ASTRA_DB_ENDPOINT=your_astra_db_endpoint
ASTRA_DB_TOKEN=your_astra_db_token

# Google APIs (for search data)
GOOGLE_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=e79630e1ef2e843db

# Authentication
JWT_SECRET=
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Embeddings Configuration
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=3072
CHUNK_SIZE=512
CHUNK_OVERLAP=128

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# External APIs
SERP_API_KEY=your_serpapi_key_here
SCRAPER_API_KEY=your_scraper_api_key_here

# Feature Flags
ENABLE_REAL_TIME_MONITORING=true
ENABLE_AI_REASONING=true
ENABLE_SYNTHETIC_QUERY_DETECTION=true